# Solana RPC (needed for on-chain safety checks — free public RPC works but is rate limited)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
HELIUS_API_KEY=your_helius_key

# Twitter/X (optional — enables Twitter trend scanning + CA mention scoring)
TWITTER_BEARER_TOKEN=your_twitter_token

# Discord bot (required — alerts are sent as embeds to this channel)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id

# Alert settings
MIN_SCORE_THRESHOLD=70
SCAN_INTERVAL_MS=30000

# --- Proactive Scanning (all opt-in, disabled by default) ---

# Launch monitor — direct pump.fun new token monitoring
ENABLE_LAUNCH_MONITOR=false
LAUNCH_MONITOR_POLL_MS=12000

# Smart money tracking — monitor wallets of known profitable traders
ENABLE_SMART_MONEY=false
SMART_MONEY_WALLETS=wallet1,wallet2,wallet3
SMART_MONEY_POLL_MS=15000

# GoPlus security API — additional honeypot/rug detection
ENABLE_GOPLUS=false

# PumpSwap program ID (default provided, override if needed)
