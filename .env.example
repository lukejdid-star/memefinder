# Solana RPC (needed for on-chain safety checks — free public RPC works but is rate limited)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
HELIUS_API_KEY=your_helius_key

# Discord bot (required — alerts are sent as embeds to this channel)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id

# Alert settings
MIN_SCORE_THRESHOLD=70
SCAN_INTERVAL_MS=30000

# --- Trending Sources (enabled by default) ---

# DexScreener trending — scans trending Solana tokens + boosted tokens
ENABLE_DEXSCREENER_TRENDING=true
DEXSCREENER_TRENDING_TIMEFRAME=1h

# Jupiter trending — scans top trending tokens on Jupiter
ENABLE_JUPITER_TRENDING=true
JUPITER_TRENDING_INTERVAL=1h

# --- Proactive Scanning (all opt-in, disabled by default) ---

# Launch monitor — direct pump.fun new token monitoring
ENABLE_LAUNCH_MONITOR=false
LAUNCH_MONITOR_POLL_MS=12000

# Graduation detection — detect tokens that graduated from pump.fun bonding curve
ENABLE_GRADUATION_DETECTION=true

# Smart money tracking — monitor wallets of known profitable traders
ENABLE_SMART_MONEY=false
SMART_MONEY_WALLETS=wallet1,wallet2,wallet3
SMART_MONEY_POLL_MS=15000

# Telegram monitoring — monitor groups for CA mentions and $TICKER callouts
# Run `npm run telegram-auth` first to get your session string
ENABLE_TELEGRAM=false
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=+1234567890
TELEGRAM_SESSION=your_session_string
TELEGRAM_GROUP_IDS=group_id_1,group_id_2

# GoPlus security API — additional honeypot/rug detection
ENABLE_GOPLUS=false

# --- Backtesting ---

# Forward tracker — logs scored tokens and checks outcomes at 1h/6h/24h
ENABLE_FORWARD_TRACKER=false
FORWARD_TRACKER_CHECK_INTERVAL_MS=1800000

# PumpSwap program ID (default provided, override if needed)
# PUMPSWAP_PROGRAM_ID=PSwapMdSai8tjrEXcxFeQth87xC4rRsa4VA5mhGhXkP
